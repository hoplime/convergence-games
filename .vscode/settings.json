{
    // Python
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.rulers": [80, 120]
    },
    "notebook.formatOnSave.enabled": true,
    "ruff.codeAction.fixViolation": {
        "enable": true
    },
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.lint.args": ["--config=${workspaceFolder}/pyproject.toml"],
    "ruff.lint.run": "onSave",

    // Hide files
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        ".pytest_cache": true,
        ".ruff_cache": true,
        ".venv": true,
        "junit": true
    },

    // Tailwind
    "tailwindCSS.includeLanguages": {
        "jinja-html": "html"
    },
    "files.associations": {
        "*.css": "tailwindcss",
        "*.html.jinja": "jinja-html"
    },
    "[jinja-html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.tabWidth": 4,
        "editor.indentSize": "tabSize",
        "editor.tabSize": 4
    },
    "emmet.includeLanguages": {
        "jinja-html": "html"
    },
    "svg.preview.background": "editor",
    "todo-tree.tree.showBadges": true,

    // HTML Custom Data for JinjaX Components
    "html.customData": ["jinjax-components.html-data.json"],
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "meta.tag.other.Card.html invalid.illegal.unrecognized-tag.html",
                    "meta.tag.other.Layout.html invalid.illegal.unrecognized-tag.html",
                    "meta.tag.other.TestPage.html invalid.illegal.unrecognized-tag.html"
                ],
                "name": "Custom JinjaX Components",
                "settings": {
                    "foreground": "#4EC9B0"
                }
            }
        ]
    },
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.jinja$",
                "cmd": "${workspaceFolder}/.venv/bin/python component_hinting_helper.py convergence_games/app/templates/components/ --add-vscode-settings"
            }
        ]
    }
}
