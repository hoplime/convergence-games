<Page>
    {% block content %}
        <title>My Submissions - Convergence 2025</title>
        <PageContainer>
            <div>My Submissions</div>
            {% if games %}
                <ul class="list bg-base-200 rounded-box">
                    {% for game in games %}
                        <li class="list-row items-center">
                            <div>{{ game.name }}</div>
                            <div></div>
                            <div class="{{ game.submission_status.color_classes }}">{{ game.submission_status }}</div>
                            <div>
                                ({{ game.game_requirement.times_to_run }}<span class="hidden md:inline-block">
                                    &nbsp;sessions</span
                                >)
                            </div>
                            <a href="/game/{{ swim(game) }}" class="btn btn-sm btn-neutral btn-outline">View</a>
                            <a href="/game/{{ swim(game) }}/edit" class="btn btn-sm btn-neutral btn-outline" disabled>
                                Edit
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <div class="flex flex-col gap-4">
                    <p>You haven't submitted anything yet.</p>
                    <button
                        class="btn btn-xl btn-primary mx-auto"
                        hx-get="/submit-game"
                        hx-target="#content"
                        hx-push-url="true"
                    >
                        Submit a Game to Convergence 2025
                    </button>
                </div>
            {% endif %}
        </PageContainer>
    {% endblock %}
</Page>
