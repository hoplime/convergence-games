            <h3 class="mt2 text-lg">Gold Tier</h3>
            <div class="grid grid-cols-1 gap-2">
                <SponsorCard tier="gold" img-src="/static/images/sponsors/gamersphere.png" name="Gamersphere" website_url="https://www.gamersphere.nz/" />
            </div>
            <h3 class="mt2 text-lg">Silver Tier</h3>
            <div class="grid grid-cols-2 gap-2 md:grid-cols-2 lg:grid-cols-3">
                <SponsorCard tier="silver" img-src="/static/images/sponsors/dice_goblin.png" name="Dice Goblin" website_url="https://www.dicegoblin.nz/" />
                <SponsorCard tier="silver" img-src="/static/images/sponsors/gaming_dna.png" name="Gaming DNA" website_url="https://gamingdna.co.nz/" />
                <SponsorCard tier="silver" img-src="/static/images/sponsors/beadnd.png" name="BeaDnD" website_url="https://www.beadndgames.co.nz/" />
