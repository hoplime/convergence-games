                <SponsorCard tier="silver" img-src="/static/images/sponsors/cold_robot_design.png" name="Cold Robot Design" website_url="https://www.coldrobotdesign.co.nz/" />
            </div>
            <h3 class="mt2 text-lg">Prize Support</h3>
            <div class="grid grid-cols-2 gap-2 md:grid-cols-3 lg:grid-cols-4">
                <SponsorCard tier="prize" img-src="/static/images/sponsors/game_roost.png" name="Game Roost" website_url="https://www.gameroost.co.nz/" />
                <SponsorCard tier="prize" img-src="/static/images/sponsors/free_league.png" name="Free League" website_url="https://freeleaguepublishing.com/" />
                <SponsorCard tier="prize" img-src="/static/images/sponsors/flat_cap_games.jpg" name="Flat Cap Games" website_url="https://www.facebook.com/flatcapgames/" />
                <SponsorCard tier="prize" img-src="/static/images/sponsors/cheeky_parrot.png" name="Cheeky Parrot Games" website_url="https://www.cheekyparrotgames.com/" />
                <SponsorCard tier="prize" img-src="/static/images/sponsors/looking_glass_workshop.png" name="Looking Glass Workshop" website_url="https://lookingglassworkshop.com/" />
                <SponsorCard tier="prize" img-src="/static/images/sponsors/ludogix.png" name="Ludogix" website_url="https://ludogix.com/" />
                <SponsorCard tier="prize" img-src="/static/images/sponsors/schilmil.jpg" name="SchilMil" website_url="https://www.schilmilgames.com/" />
                <SponsorCard tier="volunteer" img-src="/static/images/sponsors/escapist.png" name="Escapist" website_url="https://www.escapist.co.nz/" />
            </div>
            <div class="divider divider-vertical"></div>
            <!-- prettier-ignore-end -->
        </PageContainer>
    {% endblock %}
</Page>
