{#def
    flag_enum: FlagWithNotes,
    name: str = "flag",
    display_tooltips: bool = True
#}
{% for f in flag_enum %}
    {% if display_tooltips %}
        <Tooltip class="w-fit">
            <label class="fieldset-label">
                <input type="checkbox" name="{{ name }}" value="{{ f }}" class="checkbox" />
                <span>{{ f.form_notes[0] }}</span>
                <TooltipIcon />
            </label>
            <TooltipContent>
                <div class="flex flex-col gap-2">
                    <p>{{ f.tooltips[0] }}</p>
                </div>
            </TooltipContent>
        </Tooltip>
    {% else %}
        <label class="fieldset-label">
            <input type="checkbox" name="{{ name }}" value="{{ f }}" class="checkbox" />
            <span>{{ f.form_notes[0] }}</span>
        </label>
    {% endif %}
{% endfor %}
