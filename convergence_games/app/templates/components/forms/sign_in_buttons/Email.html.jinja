{#def
    linking_account_sqid: str | None = None,
#}
{% set href="/email_sign_in?linking_account_sqid=" ~ linking_account_sqid if linking_account_sqid is not none else "/email_sign_in" %}
<a href="{{ href }}" class="btn btn-ghost">
    <img src="static/icons/logos/email.svg" class="h-8" alt="Email Logo" />
    <span>{{ 'Link' if linking_account_sqid is not none else 'Sign in with' }} Email</span>
</a>
