{#def
    selected_name: str,
    selected_sqid: str = "",
    new: bool = False,
    name: str = "search",
#}
{% if new %}
    <div>{{ selected_name }} (NEW!)</div>
{% else %}
    <div>You've selected {{ selected_name }}</div>
{% endif %}
<input type="hidden" name="{{ name }}" value="{{ 'new:'~selected_name if new else selected_sqid }}" />
<button
    type="button"
    class="btn btn-primary"
    hx-get="/search/{{ name }}"
    hx-target="closest .search-container"
    hx-swap="outerHTML"
>
    Cancel
</button>
