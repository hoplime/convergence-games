{#def
    email: str
#}
<form>
    <input type="hidden" name="email" value="{{ email }}" />
    <div>Please enter the code sent to {{ email }}:</div>
    <input
        type="text"
        class="form-input"
        placeholder="Code"
        name="code"
        pattern="[0-9]{6}"
        oninput="this.value = this.value.replace(/[^0-9.]/g, '')"
        maxlength="6"
    />
    <a class="btn btn-primary" hx-post="/email_auth/verify_code">Submit</a>
</form>
