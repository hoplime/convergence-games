{#def
    selected_name: str,
    value: str = "",
    name: str = "search",
#}
<div class="badge badge-outline pr-2">
    <input type="checkbox" name="{{ name }}" value="{{ value | unquote }}" class="hidden" checked />
    <h1>{{ selected_name }}</h1>
    <span
        class="icon-[system-uicons--cross-circle] size-5 cursor-pointer"
        _="on click 
            get the closest <div/>
            then remove it"
    ></span>
</div>
