{% extends "shared/_layout.html.jinja" %}
{% block title %}Login - Convergence 2024{% endblock %}
{% block content %}
    <title>Login - Convergence 2024</title>

    <form hx-post="/login" hx-target="#content" class="m-auto w-96 max-w-[90%]">
        <h1 class="mb-4 text-2xl font-semibold antialiased">Login</h1>
        <p class="italic">If you're a GM, please use the email you signed up with.</p>
        <label class="input input-bordered flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 opacity-70">
                <path
                    d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"
                />
                <path
                    d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"
                />
            </svg>
            <input type="email" name="email" id="email" class="grow" placeholder="Email" required />
        </label>
        <button type="submit" class="btn btn-primary mb-4 w-full">Login</button>
        <a hx-get="/signup" hx-target="#content" class="link">Sign Up Instead</a>
    </form>
{% endblock %}
