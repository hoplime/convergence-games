{% extends "shared/_layout.html.jinja" %}
{% block title %}My Profile - Convergence 2024{% endblock %}
{% block content %}
    <title>My Profile - Convergence 2024</title>

    <div class="mx-auto grid grid-cols-1 gap-4 xl:container">
        <div class="flex flex-col gap-2">
            <h1 class="text-2xl font-semibold antialiased">Profile</h1>
            <p class="text-lg font-semibold" hx-target="this" hx-swap="outerHTML">
                {{ user.name }}
                <button class="btn btn-ghost btn-sm" hx-get="/edit_profile">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="currentColor"
                        class="bi bi-pencil-square inline"
                        viewBox="0 0 16 16"
                    >
                        <path
                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                        />
                        <path
                            fill-rule="evenodd"
                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"
                        />
                    </svg>
                </button>
            </p>
            {% if user.golden_d20s %}
                <div class="flex flex-row gap-1">
                    Golden D20s:
                    {% for i in range(user.golden_d20s) %}
                        <div
                            class="mask-d20 mask grid h-6 w-6 place-items-center bg-yellow-400 leading-none text-base-100"
                        >
                            <span class="font-bold">20</span>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p>No Golden D20s available.</p>
            {% endif %}
        </div>
        <span>
            <button
                type="button"
                class="btn btn-outline btn-accent inline-block"
                hx-post="/logout"
                hx-target="#content"
                hx-push-url="false"
            >
                Logout
            </button>
        </span>
    </div>
{% endblock %}
