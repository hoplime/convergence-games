<button
    type="button"
    class="bg-blue-500 text-white px-2 py-1 rounded-md mt-2 {{ extra_classes }}"
    {% if extra_attrs %}
        {% for attr_name, attr_value in extra_attrs.items() %}
            {{ attr_name }}="{{ attr_value | safe }}"
        {% endfor %}
    {% endif %}
>{{ text if text else 'Button' }}</button>