<div class="
    -md:collapse -md:bg-base-200
    md:dropdown
    group">
  <input type="checkbox" class="peer md:hidden" />
  {# Collapse Title #}
  <div tabindex="0" class="collapse-title text-sm font-medium after:content-['▼'] after:text-xs after:ml-1 after:inline-flex after:items-center peer-checked:after:-rotate-180 after:transition-transform md:hidden">
    {{ title }}
  </div>
  {# Dropdown Title #}
  <div tabindex="0" role="button" class="btn m-1 text-sm font-medium after:content-['▼'] after:text-xs after:ml-1 after:inline-flex after:items-center group-focus-within:after:-rotate-180 after:transition-transform -md:hidden">{{ title }}</div>
  <div class="
    collapse-content
    dropdown-content z-[1] menu md:p-2 md:shadow md:bg-base-100 md:rounded-box md:w-54
    ">
    <ul tabindex="0">
        {% for option in options %}
        <li>
            <label class="cursor-pointer label pointer-events-auto">
                <span class="label-text pointer-events-auto">{{ option.name }}</span>
                <input
                    type="checkbox"
                    class="checkbox checkbox-accent"
                    value="{{ option.value }}"
                    name="{{ form_name }}"
                    {% if option.checked %}checked{% endif %}
                />
            </label>
        </li>
        {% endfor %}
    </ul>
  </div>
</div>