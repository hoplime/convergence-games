<tr hx-target="this" class="person_row_edit">
    <td class="flex flex-row gap-2">
        <label class="input input-sm input-bordered flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 opacity-70">
                <path
                    d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z"
                />
            </svg>
            <input type="text" name="name" class="grow" placeholder="Full Name" value="{{ person.name }}" required />
        </label>
        <label class="input input-sm input-bordered flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4 opacity-70">
                <path
                    d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z"
                />
                <path
                    d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z"
                />
            </svg>
            <input type="email" name="email" class="grow" placeholder="Email" value="{{ person.email }}" required />
        </label>
    </td>
    <td>{{ person.id if person.id is not none else '-' }}</td>
    <td>
        <label class="input input-sm input-bordered flex w-16 py-1">
            <input type="number" class="w-full grow" name="golden_d20s" value="{{ person.golden_d20s }}" required />
        </label>
    </td>
    <td>
        <label class="input input-sm input-bordered flex w-16 py-1">
            <input type="number" class="w-full grow" name="compensation" value="{{ person.compensation }}" required />
        </label>
    </td>
    <td class="flex flex-row">
        <button
            class="btn btn-ghost btn-sm"
            hx-put="/admin/person_row_edit{{ ('?person_id=' ~ person.id) if person.id is not none else '' }}"
            hx-headers='javascript:{"X-API-Key":document.querySelector("input[name=X-API-Key]").value}'
            hx-include="closest .person_row_edit"
            hx-headers='javascript:{"X-API-Key":document.querySelector("input[name=X-API-Key]").value}'
            hx-swap="outerHTML"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-check-square text-green-400"
                viewBox="0 0 16 16"
            >
                <path
                    d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"
                />
                <path
                    d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"
                />
            </svg>
        </button>
        <button
            class="btn btn-ghost btn-sm"
            hx-get="/admin/person_row_view{{ ('?person_id=' ~ person.id) if person.id is not none else '' }}"
            hx-headers='javascript:{"X-API-Key":document.querySelector("input[name=X-API-Key]").value}'
            hx-swap="outerHTML"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-x-square text-red-400"
                viewBox="0 0 16 16"
            >
                <path
                    d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"
                />
                <path
                    d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"
                />
            </svg>
        </button>
    </td>
</tr>
